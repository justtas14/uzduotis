{% extends 'base.html.twig' %}

{% block title %}Contact me{% endblock %}

{% block home %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('cv', {id: app.request.get('id')}) }}">Home</a>
    </li>
{% endblock %}
{% block experience %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('cv', {id: app.request.get('id')}) }}#expSection">Experience</a>
    </li>
{% endblock %}
{% block contacts %}
    <li class="nav-item">
        <a class="nav-link" href="{{ path('cv', {id: app.request.get('id')}) }}#footerSection">Contacts</a>
    </li>
{% endblock %}
{% block users %}
    <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                User's list
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                {% for user in app.request.get('users') %}
                    <a class="dropdown-item" href="{{ path('form', {'id': user.getId}) }}">{{ user.email }}</a>
                    {% else %}
                        <a class="dropdown-item" href="#">No users have been found</a>
                {% endfor %}
            </div>
        </li>
    </ul>
{% endblock %}




{% block body %}

    <main id="main" class="mb-5 ml-5 mr-5">

    {{ form_start(contactForm)}}
    {{ form_widget(contactForm)}}
    {{ form_end(contactForm)}}

    </main>
{% endblock %}
